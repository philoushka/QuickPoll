extends ../layout

block head
    script(src="/scripts/new.js")
block content   
    h2 Get Your Quick Tally Started.        
    div(class="well bs-component")  
        form(method="post", action="/tally/new", class="form-horizontal", id="formNew")
            fieldset                

                div.form-group
                   label(for="pollOwnerName",class="col-lg-2 control-label") Who Are You?
                   div.col-lg-10
                        input(type="text",class="form-control required",placeholder="Your Name", id="pollOwnerName", name="pollOwnerName" )                        
                div.form-group
                   label(for="pollQuestion",class="col-lg-2 control-label") Poll Question:
                   div.col-lg-10
                        input(type="text",class="form-control required",placeholder="What's your question?", id="pollQuestion", name="pollQuestion" )
                div.form-group   
                   label(for="pollDesc",class="col-lg-2 control-label") Brief Description:
                   div.col-lg-10
                        textarea(id="pollDesc",name="pollDesc",class="form-control", placeholder="Add more details if you like")
                
                div.form-group
                    label(for="choiceType",class="col-lg-2 control-label")  Answers: 
                    div.col-lg-10
                        div(class="choiceTypeLeft")
                            
                            select(id="numFreeTextChoices", name="numFreeTextChoices",class="form-control")
                                -for (var i = 1; i < 10; ++i) {
                                     option= i
                                - }    
                        div(class="choiceTypeRight")
                  //-div.form-group   
                   //-label(for="numFreeTextChoices",class="col-lg-2 control-label") Freetext Choices To Give:
                  //-div.col-lg-10

                div.form-group
                   label(for="notification",class="col-lg-2 control-label") Notify Me:
                   div.col-lg-10
                        input(type="text",class="form-control",placeholder="Optional. Phone number for SMS or email address", id="notification", name="notification" )
                        div#notificationMsg
                div.form-group
                 div(class="col-lg-10 col-lg-offset-2")
                   button(type="submit",class="btn btn-primary") Make It
