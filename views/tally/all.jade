extends ../layout
block head
    script(src="/scripts/all.js")
block content 

  table(class="table table-striped table-hover")
    thead
        tr
            th 
            th Question
            th Owner
            th Num Answers
            th Edit/Delete
    
    //-each tally in tallies
    - for (var i = 1; i < tallies.length; ++i) { 
    - tally=tallies[i];
        tr
            td
              p=i
            td
                a(href="/tally/results/" + tally.id)= tally.question
                p
                    small=tally.desc
                p 
                    small=tally.createdDateString                   
            td  
                a(href="/tally/owner/"+tally.ownerNameEncoded)= tally.ownerName
            td=tally.numResponses     
            td(class="tallyActionImgs")
                a(href="/tally/edit/" + tally.id)
                    i(class="fa fa-pencil-square-o fa-2x")
                form(method="post",action="delete/"+ tally.id + "/" + tally.deleteToken,class="cellActionImg")
                  a(href="#",class="delTally")
                    i(class="fa fa-trash-o fa-2x deleteTally")
    - }